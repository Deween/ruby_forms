<%= form_with model: @user, method: :post do |form|%>
    <%= form.label :username,"User Name:" %>
    <%= form.text_field :username%>
    <%= form.label :email,"Email:" %>
    <%= form.text_field :email%>
    <%= form.label :password,"Password" %>
    <%= form.text_field :password%>
    <%= form.submit "Submit" %>
<% end %>


